{
  "name": "@se-2/hardhat",
  "version": "0.1.0",
  "scripts": {
    "// 1. CORE DEVELOPMENT ------------------": "",
    "chain": "hardhat node --network hardhat --no-deploy",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "compile": "hardhat compile",
    "clean": "hardhat clean",

    "// 2. DEPLOYMENT & VERIFICATION ---------": "",
    "deploy": "hardhat deploy --network ${NETWORK:-hardhat}",
    "verify": "hardhat etherscan-verify",
    "hardhat-verify": "hardhat verify",
    "check:preflight": "ts-node scripts/pre_flight_check.ts",
    "verify-key": "ts-node helpers/verify-pk-key.ts",

    "// 3. PROTOCOL OPERATIONS -------------": "",
    "op:fund-paymaster": "hardhat run scripts/fundPaymaster.ts --network ${NETWORK:-hardhat}",
    "op:upgrade-aggregator": "hardhat run scripts/operations/upgrade_multiaggregator_v2.ts --network ${NETWORK:-hardhat}",
    "op:set-usd-limits": "hardhat run scripts/loadAndSetMaxUsd.ts --network ${NETWORK:-hardhat}",
    
    "// 4. CODE QUALITY & MAINTENANCE --------": "",
    "format": "prettier --write './**/*.(ts|sol)'",
    "lint": "eslint",
    "lint-staged": "eslint",
    "check-types": "tsc --noEmit --incremental",
    "flatten": "hardhat flatten",
  
    "// 5. TESTING ---------------------------": "",
    "test": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "HARDHAT_GAS_REPORT=true hardhat test",
    "test:file": "REPORT_GAS=true hardhat test --network ${NETWORK:-hardhat}",
    "testlocal:file": "REPORT_GAS=true hardhat test --network hardhat",
    "test:smart-account-creation": "REPORT_GAS=true hardhat test --network ${NETWORK:-hardhat} test/SmartAccount.test.ts",
    "test:sponsorship-verifications": "REPORT_GAS=true hardhat test --network ${NETWORK:-hardhat} test/SponsorshipVerifications.test.ts",
    
    "// 6. ACCOUNT MANAGEMENT --------------": "",
    "account": "hardhat run scripts/listAccount.ts",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:import": "hardhat run scripts/importAccount.ts",
    "account:reveal-pk": "hardhat run scripts/revealPK.ts",
    "account:reveal-address": "hardhat run scripts/revealAddress.ts",
    "generate": "yarn account:generate"
  },
  "private": true,
  "dependencies": {
    "@alchemy/aa-accounts": "latest",
    "@alchemy/aa-core": "latest",
    "@alchemy/aa-ethers": "latest",
    "@inquirer/password": "latest",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "@typechain/ethers-v6": "latest",
    "@types/node": "latest",
    "@uniswap/v3-periphery": "latest",
    "dotenv": "latest",
    "envfile": "latest",
    "next-themes": "latest",
    "permissionless": "latest",
    "qrcode": "latest",
    "viem": "2.28.1"
  },
  "devDependencies": {
    "@account-abstraction/contracts": "^0.8.0",
    "@ethersproject/abi": "~5.7.0",
    "@ethersproject/providers": "~5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "~2.0.7",
    "@nomicfoundation/hardhat-ethers": "~3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "~1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "~2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/eslint": "~9.6.1",
    "@types/mocha": "~10.0.10",
    "@types/prettier": "~3.0.0",
    "@types/qrcode": "~1.5.5",
    "@typescript-eslint/eslint-plugin": "~8.27.0",
    "@typescript-eslint/parser": "~8.27.0",
    "chai": "~4.5.0",
    "eslint": "~9.23.0",
    "eslint-config-prettier": "~10.1.1",
    "eslint-plugin-prettier": "~5.2.4",
    "ethers": "^6.14.0",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "~0.12.4",
    "hardhat-deploy-ethers": "~0.4.2",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "~1.4.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "~10.9.1",
    "typechain": "~8.3.2",
    "typescript": "^5.8.3"
  }
}
